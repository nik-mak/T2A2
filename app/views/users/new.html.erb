<h1> Create Account </h1>
<%= form_with(model: @user, data: {turbo: false}) do |f| %>
  <fieldset class='mb-2'>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </fieldset>
  <fieldset class='mb-2'>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </fieldset>
  <fieldset class='mb-2'>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </fieldset>
  <fieldset class='mb-2'>
    <%= f.label :desctription, 'Bio' %>
    <%= f.text_area :description %>
  </fieldset>
  <fieldset class='mb-2'>
    <h3>Skills:</h3>
    <% Skill.all.each do |skill| %>
      <%= f.check_box :skill_ids, { multiple: true }, skill.id, nil %>
      <%= f.label skill.name %>
      <br/>
    <% end %>
  </fieldset>
  <fieldset>
    <%= f.submit class: 'btn btn-secondary btn-sm' %>
  </fieldset>
<% end %>
