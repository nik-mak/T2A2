<h1>
  <%= @user.full_name %>
</h1>
<div class='btn-toolbar'>
  <%= link_to 'Edit Account', edit_user_path(@user), class: "btn btn-warning me-2" %>
  <%= button_to 'Delete Account', @user, class: 'btn btn-danger',method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this account?" } } %>
</div>
<h3> Bio: </h3>
<p> <%= @user.description %> </p>
<h3> Skills: </h3>
<% @user.skills.each do |skill| %>
  <p> <%= skill.name %> </p>
<% end %>
<h3>
  Uploaded Projects
  <%= link_to 'Create New Project', projects_new_path, class: "btn btn-primary btn-sm" %>
</h3>
<% @user.requester_projects.each do |project| %>
  <p> <%= link_to project.name, project_path(project.id) %> </p>
<% end %>
<h3> Worked On Projects </h3>
<% @user.developer_projects.each do |project| %>
  <p> <%= link_to project.name, project_path(project.id) %> </p>
<% end %>
